generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Photo {
  id      String         @id @default(uuid())
  title   String
  imageId String?
  albums  PhotoOnAlbum[]
}

model Album {
  id     String         @id @default(uuid())
  title  String
  photos PhotoOnAlbum[]
}

model PhotoOnAlbum {
  photoId String
  albumId String

  photo Photo @relation(fields: [photoId], references: [id])
  album Album @relation(fields: [albumId], references: [id])

  @@id([photoId, albumId])
}
